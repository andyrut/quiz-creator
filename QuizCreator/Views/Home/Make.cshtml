@model QuizCreator.Models.Home.CreateModel
@{
    ViewData["Title"] = "Create a Quiz";
}

<input type="hidden" id="templateGuid" value="@Model.TemplateGuid"/>

<section id="hero" class="d-flex">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10 pt-3 pt-lg-0 order-2 order-lg-1 d-flex flex-column justify-content-center">
                
                <div id="app">
                    
                    <input type="button" onclick="update()" value="Update" />

                    Quiz Name: <input id="quizName" v-model="template.name" placeholder="My Quiz Name"/>
                    <br/><br/>

                    Quiz Description: <input id="quizDesc" v-model="template.description" placeholder="My Quiz Description"/>
                    <br/><br/>

                    <div v-for="(question, q) in template.questions">
                        <h2>Question #{{ q + 1 }}:</h2>
                        <br/>
                        <br/>

                        <quill-editor v-model:content="question.text" theme="snow" content="html" content-type="html"></quill-editor>
                        <br/>
                        
                        <div>
                            <ul>
                                <li v-for="(answer, a) in question.answers">
                                    <input v-model="answer.text" :placeholder="'Answer #' + (a+1)"/> <span v-if="answer.correct === true">(Correct)</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="https://unpkg.com/vue%403/dist/vue.global.js"></script>
    <script src="https://unpkg.com/%40vueup/vue-quill@1.2.0"></script>
    <script src="~/js/make.js"></script>
}